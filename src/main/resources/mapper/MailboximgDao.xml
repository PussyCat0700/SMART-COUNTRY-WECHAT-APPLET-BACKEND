<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.MailboximgDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Mailboximg" id="MailboximgMap">
        <result property="mailboxid" column="mailboxId" jdbcType="INTEGER"/>
        <result property="imagebase64" column="imageBase64" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MailboximgMap">
        select
          mailboxId, imageBase64
        from mailboximg
        where mailboxId = #{mailboxid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MailboximgMap">
        select
          mailboxId, imageBase64
        from mailboximg
        <where>
            <if test="mailboxid != null">
                and mailboxId = #{mailboxid}
            </if>
            <if test="imagebase64 != null and imagebase64 != ''">
                and imageBase64 = #{imagebase64}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from mailboximg
        <where>
            <if test="mailboxid != null">
                and mailboxId = #{mailboxid}
            </if>
            <if test="imagebase64 != null and imagebase64 != ''">
                and imageBase64 = #{imagebase64}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mailboxid" useGeneratedKeys="true">
        insert into mailboximg(imageBase64)
        values (#{imagebase64})
    </insert>

    <insert id="insertBatch" keyProperty="mailboxid" useGeneratedKeys="true">
        insert into mailboximg(imageBase64)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.imagebase64})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="mailboxid" useGeneratedKeys="true">
        insert into mailboximg(imageBase64)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.imagebase64})
        </foreach>
        on duplicate key update
        imageBase64 = values(imageBase64)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mailboximg
        <set>
            <if test="imagebase64 != null and imagebase64 != ''">
                imageBase64 = #{imagebase64},
            </if>
        </set>
        where mailboxId = #{mailboxid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mailboximg where mailboxId = #{mailboxid}
    </delete>

</mapper>

