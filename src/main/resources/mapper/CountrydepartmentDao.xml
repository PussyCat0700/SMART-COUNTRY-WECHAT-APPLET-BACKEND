<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.CountrydepartmentDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Countrydepartment" id="CountrydepartmentMap">
        <result property="did" column="did" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CountrydepartmentMap">
        select did,
               cid
        from countrydepartment
        where did = #{did}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CountrydepartmentMap">
        select
        did, cid
        from countrydepartment
        <where>
            <if test="did != null">
                and did = #{did}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from countrydepartment
        <where>
            <if test="did != null">
                and did = #{did}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="did" useGeneratedKeys="true">
        insert into countrydepartment()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="did" useGeneratedKeys="true">
        insert into countrydepartment()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="did" useGeneratedKeys="true">
        insert into countrydepartment()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update countrydepartment
        <set>
        </set>
        where did = #{did}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from countrydepartment
        where did = #{did}
    </delete>

</mapper>

