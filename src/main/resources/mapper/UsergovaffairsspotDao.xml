<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.UsergovaffairsspotDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Usergovaffairsspot" id="UsergovaffairsspotMap">
        <result property="gasid" column="GASid" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="appointTime" column="Appoint_time" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UsergovaffairsspotMap">
        select GASid,
               uid,
               Appoint_time,
               status
        from usergovaffairsspot
        where GASid = #{gasid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UsergovaffairsspotMap">
        select
        GASid, uid, Appoint_time, status
        from usergovaffairsspot
        <where>
            <if test="gasid != null">
                and GASid = #{gasid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="appointTime != null and appointTime != ''">
                and Appoint_time = #{appointTime}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from usergovaffairsspot
        <where>
            <if test="gasid != null">
                and GASid = #{gasid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="appointTime != null and appointTime != ''">
                and Appoint_time = #{appointTime}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="gasid" useGeneratedKeys="true">
        insert into usergovaffairsspot(Appoint_time, status)
        values (#{appointTime}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="gasid" useGeneratedKeys="true">
        insert into usergovaffairsspot(Appoint_time, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.appointTime}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="gasid" useGeneratedKeys="true">
        insert into usergovaffairsspot(Appoint_time, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.appointTime}, #{entity.status})
        </foreach>
        on duplicate key update
        Appoint_time = values(Appoint_time),
        status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update usergovaffairsspot
        <set>
            <if test="appointTime != null and appointTime != ''">
                Appoint_time = #{appointTime},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where GASid = #{gasid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from usergovaffairsspot
        where GASid = #{gasid}
    </delete>

</mapper>

