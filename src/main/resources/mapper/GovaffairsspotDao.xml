<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.GovaffairsspotDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Govaffairsspot" id="GovaffairsspotMap">
        <result property="gasid" column="GASid" jdbcType="INTEGER"/>
        <result property="gastime" column="GASTime" jdbcType="TIMESTAMP"/>
        <result property="gasdescription" column="GASDescription" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GovaffairsspotMap">
        select
          GASid, GASTime, GASDescription
        from govaffairsspot
        where GASid = #{gasid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GovaffairsspotMap">
        select
          GASid, GASTime, GASDescription
        from govaffairsspot
        <where>
            <if test="gasid != null">
                and GASid = #{gasid}
            </if>
            <if test="gastime != null">
                and GASTime = #{gastime}
            </if>
            <if test="gasdescription != null and gasdescription != ''">
                and GASDescription = #{gasdescription}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from govaffairsspot
        <where>
            <if test="gasid != null">
                and GASid = #{gasid}
            </if>
            <if test="gastime != null">
                and GASTime = #{gastime}
            </if>
            <if test="gasdescription != null and gasdescription != ''">
                and GASDescription = #{gasdescription}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="gasid" useGeneratedKeys="true">
        insert into govaffairsspot(GASTime, GASDescription)
        values (#{gastime}, #{gasdescription})
    </insert>

    <insert id="insertBatch" keyProperty="gasid" useGeneratedKeys="true">
        insert into govaffairsspot(GASTime, GASDescription)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.gastime}, #{entity.gasdescription})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="gasid" useGeneratedKeys="true">
        insert into govaffairsspot(GASTime, GASDescription)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.gastime}, #{entity.gasdescription})
        </foreach>
        on duplicate key update
        GASTime = values(GASTime),
        GASDescription = values(GASDescription)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update govaffairsspot
        <set>
            <if test="gastime != null">
                GASTime = #{gastime},
            </if>
            <if test="gasdescription != null and gasdescription != ''">
                GASDescription = #{gasdescription},
            </if>
        </set>
        where GASid = #{gasid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from govaffairsspot where GASid = #{gasid}
    </delete>

</mapper>

