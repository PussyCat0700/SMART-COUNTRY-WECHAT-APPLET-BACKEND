<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.DeptgovaffairsDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Deptgovaffairs" id="DeptgovaffairsMap">
        <result property="gaid" column="GAid" jdbcType="INTEGER"/>
        <result property="did" column="did" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DeptgovaffairsMap">
        select
          GAid, did
        from deptgovaffairs
        where GAid = #{gaid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DeptgovaffairsMap">
        select
          GAid, did
        from deptgovaffairs
        <where>
            <if test="gaid != null">
                and GAid = #{gaid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from deptgovaffairs
        <where>
            <if test="gaid != null">
                and GAid = #{gaid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="gaid" useGeneratedKeys="true">
        insert into deptgovaffairs()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="gaid" useGeneratedKeys="true">
        insert into deptgovaffairs()
        values
        <foreach collection="entities" item="entity" separator=",">
        ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="gaid" useGeneratedKeys="true">
        insert into deptgovaffairs()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
        
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update deptgovaffairs
        <set>
        </set>
        where GAid = #{gaid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from deptgovaffairs where GAid = #{gaid}
    </delete>

</mapper>

