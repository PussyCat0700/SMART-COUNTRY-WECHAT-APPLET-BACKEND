<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.MailboxDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Mailbox" id="MailboxMap">
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="did" column="did" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="mailcontent" column="mailContent" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MailboxMap">
        select mid,
               did,
               uid,
               mailContent
        from mailbox
        where mid = #{mid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MailboxMap">
        select
        mid, did, uid, mailContent
        from mailbox
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                and mailContent = #{mailcontent}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from mailbox
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                and mailContent = #{mailcontent}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(did, uid, mailContent)
        values (#{did}, #{uid}, #{mailcontent})
    </insert>

    <insert id="insertBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(did, uid, mailContent)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.did}, #{entity.uid}, #{entity.mailcontent})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(did, uid, mailContent)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.did}, #{entity.uid}, #{entity.mailcontent})
        </foreach>
        on duplicate key update
        did = values(did),
        uid = values(uid),
        mailContent = values(mailContent)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mailbox
        <set>
            <if test="did != null">
                did = #{did},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                mailContent = #{mailcontent},
            </if>
        </set>
        where mid = #{mid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from mailbox
        where mid = #{mid}
    </delete>

</mapper>

