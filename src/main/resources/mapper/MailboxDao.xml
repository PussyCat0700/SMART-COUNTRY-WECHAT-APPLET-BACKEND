<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.MailboxDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Mailbox" id="MailboxMap">
        <result property="mid" column="mid" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="mailcontent" column="mailContent" jdbcType="VARCHAR"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MailboxMap">
        select
          mid, uid, mailContent, cid
        from mailbox
        where mid = #{mid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MailboxMap">
        select
          mid, uid, mailContent, cid
        from mailbox
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                and mailContent = #{mailcontent}
            </if>
            <if test="cid != null">
                cid = #{cid},
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from mailbox
        <where>
            <if test="mid != null">
                and mid = #{mid}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                and mailContent = #{mailcontent}
            </if>
            <if test="cid != null">
                cid = #{cid},
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(uid, mailContent, cid)
        values (#{uid}, #{mailcontent}, #{cid})
    </insert>

    <insert id="insertBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(uid, mailContent, cid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.uid}, #{entity.mailcontent}, #{entity.cid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="mid" useGeneratedKeys="true">
        insert into mailbox(uid, mailContent, cid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.uid}, #{entity.mailcontent}, #{entity.cid})
        </foreach>
        on duplicate key update
        uid = values(uid),
        mailContent = values(mailContent),
        cid = values(cid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mailbox
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="mailcontent != null and mailcontent != ''">
                mailContent = #{mailcontent},
            </if>
            <if test="cid != null">
                cid = #{cid},
            </if>
        </set>
        where mid = #{mid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mailbox where mid = #{mid}
    </delete>

</mapper>

