<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.CreateDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Create" id="CreateMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CreateMap">
        select
          uid, cid
        from create
        where cid = #{cid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CreateMap">
        select
          uid, cid
        from create
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from create
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into create()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into create()
        values
        <foreach collection="entities" item="entity" separator=",">
        ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into create()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
        
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update create
        <set>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from create where cid = #{cid}
    </delete>

</mapper>

