<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.PublishDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Publish" id="PublishMap">
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="did" column="did" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PublishMap">
        select
          pid, did
        from publish
        where pid = #{pid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PublishMap">
        select
          pid, did
        from publish
        <where>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from publish
        <where>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="did != null">
                and did = #{did}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pid" useGeneratedKeys="true">
        insert into publish()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="pid" useGeneratedKeys="true">
        insert into publish()
        values
        <foreach collection="entities" item="entity" separator=",">
        ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="pid" useGeneratedKeys="true">
        insert into publish()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
        
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update publish
        <set>
        </set>
        where pid = #{pid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from publish where pid = #{pid}
    </delete>

</mapper>

