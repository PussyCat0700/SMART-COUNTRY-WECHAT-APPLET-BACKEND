<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.FeedbackDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Feedback" id="FeedbackMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="pid" column="pid" jdbcType="INTEGER"/>
        <result property="ftime" column="fTime" jdbcType="TIMESTAMP"/>
        <result property="fcontent" column="fContent" jdbcType="VARCHAR"/>
        <result property="freturn" column="fReturn" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="FeedbackMap">
        select
          uid, pid, fTime, fContent, fReturn
        from feedback
        where uid = #{uid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="FeedbackMap">
        select
          uid, pid, fTime, fContent, fReturn
        from feedback
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="ftime != null">
                and fTime = #{ftime}
            </if>
            <if test="fcontent != null and fcontent != ''">
                and fContent = #{fcontent}
            </if>
            <if test="freturn != null and freturn != ''">
                and fReturn = #{freturn}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from feedback
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="ftime != null">
                and fTime = #{ftime}
            </if>
            <if test="fcontent != null and fcontent != ''">
                and fContent = #{fcontent}
            </if>
            <if test="freturn != null and freturn != ''">
                and fReturn = #{freturn}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into feedback(fTime, fContent, fReturn)
        values (#{ftime}, #{fcontent}, #{freturn})
    </insert>

    <insert id="insertBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into feedback(fTime, fContent, fReturn)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.ftime}, #{entity.fcontent}, #{entity.freturn})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into feedback(fTime, fContent, fReturn)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.ftime}, #{entity.fcontent}, #{entity.freturn})
        </foreach>
        on duplicate key update
        fTime = values(fTime),
        fContent = values(fContent),
        fReturn = values(fReturn)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update feedback
        <set>
            <if test="ftime != null">
                fTime = #{ftime},
            </if>
            <if test="fcontent != null and fcontent != ''">
                fContent = #{fcontent},
            </if>
            <if test="freturn != null and freturn != ''">
                fReturn = #{freturn},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from feedback where uid = #{uid}
    </delete>

</mapper>

