<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.GovaffairsarrivalDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Govaffairsarrival" id="GovaffairsarrivalMap">
        <result property="gaaid" column="GAAid" jdbcType="INTEGER"/>
        <result property="gaatime" column="GAATime" jdbcType="TIMESTAMP"/>
        <result property="gaadescription" column="GAADescription" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GovaffairsarrivalMap">
        select
          GAAid, GAATime, GAADescription
        from govaffairsarrival
        where GAAid = #{gaaid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GovaffairsarrivalMap">
        select
          GAAid, GAATime, GAADescription
        from govaffairsarrival
        <where>
            <if test="gaaid != null">
                and GAAid = #{gaaid}
            </if>
            <if test="gaatime != null">
                and GAATime = #{gaatime}
            </if>
            <if test="gaadescription != null and gaadescription != ''">
                and GAADescription = #{gaadescription}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from govaffairsarrival
        <where>
            <if test="gaaid != null">
                and GAAid = #{gaaid}
            </if>
            <if test="gaatime != null">
                and GAATime = #{gaatime}
            </if>
            <if test="gaadescription != null and gaadescription != ''">
                and GAADescription = #{gaadescription}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="gaaid" useGeneratedKeys="true">
        insert into govaffairsarrival(GAATime, GAADescription)
        values (#{gaatime}, #{gaadescription})
    </insert>

    <insert id="insertBatch" keyProperty="gaaid" useGeneratedKeys="true">
        insert into govaffairsarrival(GAATime, GAADescription)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.gaatime}, #{entity.gaadescription})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="gaaid" useGeneratedKeys="true">
        insert into govaffairsarrival(GAATime, GAADescription)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.gaatime}, #{entity.gaadescription})
        </foreach>
        on duplicate key update
        GAATime = values(GAATime),
        GAADescription = values(GAADescription)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update govaffairsarrival
        <set>
            <if test="gaatime != null">
                GAATime = #{gaatime},
            </if>
            <if test="gaadescription != null and gaadescription != ''">
                GAADescription = #{gaadescription},
            </if>
        </set>
        where GAAid = #{gaaid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from govaffairsarrival where GAAid = #{gaaid}
    </delete>

</mapper>

