<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.miniprogram.zhihuicunwu.dao.ResidentDao">

    <resultMap type="com.miniprogram.zhihuicunwu.entity.Resident" id="ResidentMap">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ResidentMap">
        select
          uid, cid
        from resident
        where uid = #{uid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ResidentMap">
        select
          uid, cid
        from resident
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from resident
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="cid != null">
                and cid = #{cid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uid" useGeneratedKeys="true">
        insert into resident(cid, uid)
        values (#{cid}, #{uid})
    </insert>

    <insert id="insertBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into resident(cid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.cid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="uid" useGeneratedKeys="true">
        insert into resident(cid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.cid})
        </foreach>
        on duplicate key update
        cid = values(cid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update resident
        <set>
            <if test="cid != null">
                cid = #{cid},
            </if>
        </set>
        where uid = #{uid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from resident where uid = #{uid}
    </delete>

</mapper>

